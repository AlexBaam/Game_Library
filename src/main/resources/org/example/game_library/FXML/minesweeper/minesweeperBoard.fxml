<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.game_library.views.minesweeper.MinesweeperBoard">
    <children>
        <Rectangle arcHeight="5.0" arcWidth="5.0" height="720.0" mouseTransparent="true" smooth="false" stroke="BLACK" strokeType="OUTSIDE" strokeWidth="0.0" width="800.0"> <fill>
            <LinearGradient endX="0.7850378787878786" endY="0.7765151072632183" startX="0.049242422436222885" startY="0.011363643588441774">
                <stops>
                    <Stop>
                        <color>
                            <Color red="1.0" green="0.644444465637207" blue="0.644444465637207" />
                        </color>
                    </Stop>
                    <Stop offset="1.0">
                        <color>
                            <Color red="0.6629629731178284" green="0.8090123534202576" blue="1.0" />
                        </color>
                    </Stop>
                </stops>
            </LinearGradient>
        </fill>
        </Rectangle>

        <HBox alignment="CENTER" layoutX="100.0" layoutY="20.0" prefHeight="50.0" prefWidth="600.0" spacing="50.0">
            <Label fx:id="timerLabel" text="Time: 00:00">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <Label fx:id="minesRemainingLabel" text="Mines: 0">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
        </HBox>

        <GridPane fx:id="boardGrid" layoutX="175.0" layoutY="100.0" stylesheets="@../styles.css" />

        <HBox alignment="CENTER" layoutX="414.0" layoutY="617.0" prefHeight="70.0" prefWidth="300.0" spacing="20.0">
            <children>
                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveClick" prefHeight="50.0" prefWidth="120.0" styleClass="transparent-button" stylesheets="@../styles.css" text="Save" />
                <Button fx:id="forfeitButton" mnemonicParsing="false" onAction="#onForfeitClick" prefHeight="50.0" prefWidth="120.0" styleClass="transparent-button" stylesheets="@../styles.css" text="Forfeit" />
            </children>
        </HBox>
      <HBox alignment="CENTER" layoutX="162.0" layoutY="615.0" prefHeight="74.0" prefWidth="210.0" spacing="20.0">
         <children>
            <Button fx:id="shovelButton" mnemonicParsing="false" onAction="#onShovelClick" prefHeight="60.0" prefWidth="60.0" styleClass="transparent-button" stylesheets="@../styles.css">
               <graphic>
                  <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/shovel.jpg" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="flagButton" mnemonicParsing="false" onAction="#onFlagClick" prefHeight="60.0" prefWidth="60.0" styleClass="transparent-button" stylesheets="@../styles.css">
               <graphic>
                  <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/flag.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
    </children>
</AnchorPane>
